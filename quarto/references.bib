@article{poisot_trophic_2013,
	title = {Trophic complementarity drives the biodiversity–ecosystem functioning relationship in food webs},
	volume = {16},
	rights = {© 2013 John Wiley \& Sons Ltd/{CNRS}},
	issn = {1461-0248},
