	urldate = {2024-02-19},
	date = {2013},
	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.12118},
	keywords = {trophic interactions, food webs, Biodiversity–ecosystem functioning},
	file = {Full Text PDF:/Users/colebrookson/Zotero/storage/ZYXPPP9G/Poisot et al. - 2013 - Trophic complementarity drives the biodiversity–ec.pdf:application/pdf;Snapshot:/Users/colebrookson/Zotero/storage/EP7FXIWA/ele.html:text/html},
